<section class="text-center pt-3 row row-cols-3 pb-2"> 
  <div class='d-flex justify-content-start align-items-end'>
    <%= link_to 'New Post', new_post_path, class:'btn btn-primary' %>
  </div>
  <div>
    <h1><a href='/'>Blog</a></h1>
    <p>This App is built on RAILS</p>
  </div>
  <div class='d-flex justify-content-end align-items-end gap-2'>
    <% if user_signed_in? %>
      <%= button_to 'Sign Out', destroy_user_session_path, method: :delete, class: "btn btn-danger btn-sm" %>
    <% else %>
      <%= link_to 'Sign In', new_user_session_path, class: "btn btn-success" %>
      <%= link_to 'Sign Up', new_user_registration_path, class: "btn btn-warning" %>
    <% end %>
    
  </div>
</section>

