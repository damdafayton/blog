<section class="text-center pt-3 d-flex justify-content-between m-auto pb-2 container"> 
  <div class='d-flex justify-content-evenly align-items-center'>
    <%= link_to 'New Post', new_post_path, class:'btn btn-primary btn-md shadow' %>
  </div>
  <div>
    <h1 class="fw-bolder"><a href='/'>Blog</a></h1>
    <p classs="fs-4 text-secondary">This App is built on RAILS</p>
  </div>
  <div class='d-flex justify-content-evenly align-items-center gap-2'>
    <% if user_signed_in? %>
      <%= button_to 'Sign Out', destroy_user_session_path, method: :delete, class: "btn btn-danger btn-md shadow" %>
    <% else %>
      <%= link_to 'Sign In', new_user_session_path, class: "btn btn-success btn-md" %>
      <%= link_to 'Sign Up', new_user_registration_path, class: "btn btn-warning btn-md" %>
    <% end %>
    
  </div>
</section>

