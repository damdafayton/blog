<div class="container">
  <h2 class="text-center mt-4 text-grey">Log in</h2>

  <section class="d-flex justify-content-center">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html:{class: "col-12 col-sm-10 col-md-7 col-lg-4"}) do |f| %>
    <div class="field mt-2">
      <%= f.label :email, class: 'fs-4' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control p-2" %>
    </div>

    <div class="field mt-3">
      <%= f.label :password, class: 'fs-4' %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control p-2" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field mt-3">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions mt-3">
      <%= f.submit "Log in", class: "btn btn-sm btn-success w-100" %>
    </div>
  <% end %>
  </section>

  <%= render "devise/shared/links" %>
</div>