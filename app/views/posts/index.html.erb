<%= render 'users/user', user: @user %>
<% @posts.each_with_index { |post_, index_| %>
  <%= render partial: 'post', locals:{post: post_, index:index_, show_comments: true} %>
<% } %>
<% if @user_posts_count > 2 %>
  <div class='text-center mt-3'>
  <% (1..@user_posts_count/2).each { |i| %>
    <%= i %>
  <% } %>
  </div>
<% end %>