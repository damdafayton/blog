<span id="<%= 'likes_count_' + post.id.to_s %>"><%= post.likes_counter || 0 %></span>
<label for= "like-post-<%= post.id %>"> 
  <i class="fa-solid fa-heart cursor-pointer" aria-hidden="true"></i>
</label>
<%= button_to('like', like_action_path(post.id), 
    id: "like-post-#{post.id}", 
    class: 'd-none', 
    remote: true,
    form: { "data-type" => "json" } 
    ) 
%>

<%= link_to "like me", like_action_path(post.id), data: { "turbo-method": :post }, remote: true %>